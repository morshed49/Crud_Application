<%- include('include/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != '') { %>
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((row,index) => { %>
                        <tr class="align-middle">
                            <td><%= index + 1 %></td>
                            <td><%= row.name %></td>
                            <td><%= row.email %></td>
                            <td><%= row.phone %></td>
                            <td><img src="<%= row.image %>" width="60" class="img-fluid"></td>
                            <td><a href="/edit/<%= row._id %>" class="text-success"><i
                                        class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/delete/<%= row._id %>" class="text-danger"><i
                                        class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>

                        <% }) %>
                    </tbody>

                </table>
                <% } else { %>
                <h3 class="text-center text-secondary mt-4">No User Found in the database!</h3>

                <% } %>



            </div>
        </div>
    </div>
</div>
<%- include('include/footer') %>
